{
  "description": "Pico Adblocker",
  "manifest_version": 2,
  "name": "adblocker",
  "version": "1.0.1",
  "homepage_url": "https://github.com/remusao/blockrz",
  "icons": {
    "48": "shield.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "browser_action": {
    "default_title": "Adblocker"
  },
  "content_scripts": [
    {
      "match_about_blank": true,
      "all_frames": true,
      "js": [
        "content-script.bundle.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ]
}
