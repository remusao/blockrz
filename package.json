{
  "name": "blockrz",
  "version": "0.0.1",
  "description": "Build yourself an adblocker",
  "author": "Cliqz",
  "license": "MPL-2.0",
  "scripts": {
    "clean": "rm -rfv build *.bundle.js",
    "lint": "tslint --config tslint.json '*.ts'",
    "bundle": "rollup --config rollup.config.ts",
    "watch": "rollup --config rollup.config.ts --watch",
    "start:firefox": "npx web-ext run --source-dir='.'",
    "start:chromium": "npx web-ext run --source-dir='.' --target chromium"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-typescript": "^4.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@cliqz/adblocker-webextension": "^1.13.1",
    "@cliqz/adblocker-webextension-cosmetics": "^1.13.1",
    "webextension-polyfill-ts": "^0.14.0"
  }
}
